{% extends 'base.html.twig' %}

{% block title %}Prestations{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <!-- Partie de gauche - Les 10 dernières prestations -->
            <div class="col-md-6">
                <h2>Les dernières prestations</h2>
                {% for prestation in prestations %}
                <ul class="list-group">
                    <li class="list-group-item">{{ prestation.Nom }} - {{ prestation.User.prenom }} - {{ prestation.Renumeration }}€</li>
                </ul>
                {% endfor %}
            </div>

            <!-- Partie de droite - Dernier utilisateur enregistré -->
            <div class="col-md-6">
                <h2>Dernier utilisateur enregistré</h2>
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ app.user.nom }}</h5>
                        <p class="card-text">{{ app.user.email }}</p>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
